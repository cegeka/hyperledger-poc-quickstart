{
  "name": "server",
  "version": "0.0.1",
  "description": "Hyperledger POC quickstart template",
  "scripts": {
    "build-bna": "mkdirp ./dist && composer archive create --sourceType dir --sourceName . -a ./dist/poc.bna",
    "runtime-install": "composer runtime install --card PeerAdmin@hlfv1 --businessNetworkName server",
    "deploy": "composer network start --card PeerAdmin@hlfv1 --networkAdmin admin --networkAdminEnrollSecret adminpw --archiveFile dist/poc.bna --file networkadmin.card",
    "setup": "npm install --prefix setup && npm start --prefix setup",
    "admin-card": "composer card import --file networkadmin.card",
    "ping": "composer network ping --card admin@server",
    "rebuild": "composer archive create --sourceType dir --sourceName . -a ./dist/poc.bna",
    "redeploy": "composer network update -a ./dist/poc.bna -c admin@server",
    "start": "composer-rest-server -c admin@server -n required -w true",
    "test": "mocha --recursive"
  },
  "author": "Cristian Sandu",
  "email": "cristian.sandu@cegeka.com",
  "license": "Apache-2.0",
  "devDependencies": {
    "composer-admin": "0.18.0",
    "composer-client": "0.18.0",
    "composer-common": "0.18.0",
    "composer-connector-embedded": "0.18.0",
    "chai": "latest",
    "eslint": "latest",
    "istanbul": "latest",
    "mkdirp": "latest",
    "mocha": "latest"
  }
}
