{
  "name": "server",
  "version": "0.0.1",
  "description": "Hyperledger POC quickstart template",
  "scripts": {
    "build-bna": "mkdirp ./dist && composer archive create --sourceType dir --sourceName . -a ./dist/poc.bna",
    "runtime-install": "composer network install --card PeerAdmin@hlfv1 --archiveFile ./dist/poc.bna",
    "deploy": "composer network start --networkName server --networkVersion 0.0.1 --card PeerAdmin@hlfv1 --networkAdmin admin --networkAdminEnrollSecret adminpw --file networkadmin.card",
    "setup": "npm install --prefix setup && npm start --prefix setup",
    "admin-card": "composer card import --file networkadmin.card",
    "ping": "composer network ping --card admin@server",
    "rebuild": "composer archive create --sourceType dir --sourceName . -a ./dist/poc.bna",
    "redeploy": "composer network upgrade --networkName server --networkVersion 0.0.1 -c admin@server",
    "start": "composer-rest-server -c admin@server -n required -w true",
    "test": "mocha --recursive"
  },
  "author": "Cristian Sandu",
  "email": "cristian.sandu@cegeka.com",
  "license": "Apache-2.0",
  "devDependencies": {
    "composer-admin": "latest",
    "composer-client": "latest",
    "composer-common": "latest",
    "composer-connector-embedded": "latest",
    "chai": "latest",
    "eslint": "latest",
    "istanbul": "latest",
    "mkdirp": "latest",
    "mocha": "latest"
  }
}
